<%- include('header') %>
<!-- 注册 -->
<div class="reg-form">
    <form action="/reg" method="post">
        <div class="form-group">
            <label for="name">用户名</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="用户名" required>
        </div>
        <div class="form-group">
            <label for="password">密码</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="密码" required>
        </div>
        <div class="form-group">
            <label for="re_password">重复密码</label>
            <input type="password" class="form-control" id="re_password" name="re_password" placeholder="重复密码" required>
        </div>
        <input type="submit" class="btn btn-primary btn-block" value="立即注册">
    </form>
</div>
<%- include('footer') %>